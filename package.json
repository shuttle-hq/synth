{
  "name": "@getsynth/node",
  "version": "0.1.3",
  "description": "Node.js wrapper around Synth, a declarative, synthetic data generator",
  "main": "node/tsbuild/index.js",
  "scripts": {
    "build": "cd node/ && tsc --build && cargo-cp-artifact -nc index.node -- cargo build --message-format=json-render-diagnostics",
    "build-debug": "npm run build --",
    "build-release": "npm run build -- --release",
    "install": "npm run build-release",
    "clean": "tsc --build --clean",
    "test": "cargo test"
  },
  "files": [
    "synth/Cargo.toml",
    "synth/src/",
    "core/",
    "gen/",
    "node/"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@types/node": "^17.0.16",
    "cargo-cp-artifact": "^0.1",
    "strftime": "^0.10.1",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0"
  }
}
